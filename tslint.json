{
    "extends": "tslint:recommended",
    "rules": {
        // allow if statements without curly braces
        "curly": false,
        // never have trailing comma's in arrays
        "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
        // don't require object keys to be sorted
        "object-literal-sort-keys": false,
        // don't require interface names to start with I
        "interface-name": [false],
        // don't limit number of classes per file (defaults to 1)
        "max-classes-per-file": [false],
        // allow variable names to start with underscore
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
        // don't warn when reusing variable names in an inner scope
        "no-shadowed-variable": false
    },
    "jsRules": {
        // allow if statements without curly braces
        "curly": false,
        // allow single quotes
        "quotemark": [false],
        // never have trailing comma's in arrays
        "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
        // don't require object keys to be sorted
        "object-literal-sort-keys": false
    }
}